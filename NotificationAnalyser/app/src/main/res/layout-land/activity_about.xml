<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.tierep.notificationanalyser.AboutActivity">
    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/about_logo"
            android:layout_below="@id/about_app_name"
            android:src="@drawable/ic_launcher"
            style="@style/about_component"/>

        <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/about_app_name"
                android:text="@string/app_name"
                android:textSize="26dp"
                style="@style/about_component"/>

            <TextView
                android:id="@+id/about_name"
                android:text="@string/about_author"
                android:layout_below="@id/about_app_name"
                style="@style/about_component"/>
            <TextView
                android:id="@+id/about_version"
                android:layout_below="@id/about_name"
                style="@style/about_component"/>
            <TextView
                android:text="@string/about_location"
                android:layout_below="@id/about_version"
                style="@style/about_component"/>

        </RelativeLayout>

        </LinearLayout>



    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/drawer_list"
        style="@style/list_view_drawer"/>
</android.support.v4.widget.DrawerLayout>


