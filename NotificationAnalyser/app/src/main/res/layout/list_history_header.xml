<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="@dimen/list_padding_top"
    android:paddingRight="5dp"
    android:paddingBottom="@dimen/list_padding_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_padding_top"
        android:layout_marginBottom="@dimen/list_padding_top">
        <TextView
            android:id="@+id/chart_date_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_balloon"
            android:textColor="@android:color/black"
            android:padding="3dp"
            android:text="5 Jan"/>
        </LinearLayout>

    <com.productions.pieter.notificationanalyzer.BarChart
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_chart_height"
        android:layout_marginLeft="@dimen/barchart_marginSides"
        android:layout_marginRight="@dimen/barchart_marginSides"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_padding_top"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/chart_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Jan"/>
        <TextView
            android:id="@+id/chart_date_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Jan"
            android:gravity="right"
            android:textAlignment="gravity"
            />
        </LinearLayout>
</LinearLayout>