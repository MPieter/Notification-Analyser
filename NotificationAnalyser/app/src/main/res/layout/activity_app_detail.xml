<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tierep.notificationanalyser.AppDetail">

    <ImageView
        android:id="@+id/app_detail_image"
        android:layout_width="@dimen/app_icon_width"
        android:layout_height="@dimen/app_icon_height"
        android:src="@drawable/ic_launcher"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/app_detail_name"
        android:text="Application Name"
        android:textSize="@dimen/textSize_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/app_detail_image"
        android:layout_toRightOf="@id/app_detail_image"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_detail_ignore"
        android:id="@+id/app_detail_ignore"
        android:layout_below="@id/app_detail_image"
        android:layout_alignLeft="@id/app_detail_image"
        android:onClick="onCheckboxClicked"/>

</RelativeLayout>
